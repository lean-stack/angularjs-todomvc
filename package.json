{
    "private": true,
    "dependencies": {
        "angular": "^1.8.0",
        "angular-route": "^1.8.0",
        "todomvc-app-css": "^2.3.0"
    },
    "devDependencies": {
        "browser-sync": "^2.26.7",
        "cpy-cli": "^3.1.1",
        "npm-run-all": "^4.1.5"
    },
    "scripts": {
        "start": "browser-sync start -s src -w --single",
        "postinstall": "npm-run-all copy:*",
        "copy:styles": "cpy node_modules/todomvc-app-css/index.css --rename styles.css src/css",
        "copy:libs": "cpy 'node_modules/{angular,angular-*}/{*.js,*.js.map}' '!**/index.js' src/js/libs"
    }
}
